{
  "name": "Erros logs",
  "version": "0.1",
  "description": "Show errors log",
  "permissions": ["declarativeContent", "storage", "notifications", "activeTab"],
  "background": {
    "scripts": ["public/js/dist/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Backoffice errors log extension",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "public/images/icon16.png",
    "48": "public/images/icon48.png",
    "128": "public/images/icon128.png"
  },
  "manifest_version": 2
}
